<%= render 'headfoot/header' %>
<div class="container">
	<div class="row">
		<h3>注文一覧画面</h3>
	</div>
	<div class="col-xs-1"></div>
	<div class="row col-xs-10">
		<table class="col-lg-8 table">
			<tr>
				<th class="col-lg-2">購入日時</th>
				<th class="col-lg-2">購入者</th>
				<th class="col-lg-2">注文個数</th>
				<th class="col-lg-2">注文ステータス</th>
			</tr>
				<% @orders.each do |order| %>
			<tr class="admin-order-index">
				<td class="admin-order-index">
					<%= link_to admins_order_path(order.id) do %>
					<%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
					<% end %>
				</td>
				<td class="admin-order-index">
					<%= order.customer.lastname %>
					<%= order.customer.firstname %>
				</td>
				<td class="admin-order-index">
					<% sum = 0 %>
					<% order.order_details.each do |detail| %>
		            <% sum += detail.ordered_item_count.to_i %>
		            <% end %>
		            <%= sum %>
				</td>
				<td class="admin-order-index">
					<%= order.order_status %>
				</td>
			</tr>
			    <% end %>
	    </table>
	</div>
</div>
<%= render 'headfoot/footer' %>
<h1>商品詳細</h1>
<table class='table'>
<thead>
  <tr>
    <th>商品画像</th>
    <th>商品名</th>
    <th>商品説明</th>
    <th>ジャンル名</th>
    <th>価格</th>
  </tr>
</thead>
<tbody>
      <tr>
        <td><%= attachment_image_tag @product, :product_image, :fill, 300, 300, fallback:"No-Image-Available.png",size: :"300x300" %></td>
        <td><%= @product.product_name %></td>
        <td><%= @product.product_description %></td>
        <td>ジャンル名</td>
        <td> <%= @product.non_tax %> </td>
      </tr>
</tbody>
</table>


<%= link_to "edit", edit_admins_product_path(@product) %>
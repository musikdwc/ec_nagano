<body>

<h1><center>商品　新規登録画面</center></h1>

<div class="container">
	 <div class="row">
	 	<div class="col-md-3"></div>
	  	<div class="col-md-3">
	<%= form_for @product_new, url: admins_products_path do |f| %>
				<h3> 商品画像登録 </h3>
				<%= f.attachment_field :product_image %>
	    </div>
		<div class="col-md-6">
			<h3>商品名</h3>
			<%= f.text_field :product_name %>
			<h3>商品説明</h3>
			<%= f.text_area :product_description %>
			<h3>税抜価格</h3>
			<p><%= f.number_field :non_tax %>円</p>
			<h3>販売ステータス</h3>
			 <label><%= f.radio_button  :product_status, :販売中 %> 販売中 </label>
 			 <label><%= f.radio_button  :product_status, :販売停止中 %> 販売停止中</label>
			<h3>ジャンル</h3>
   	    	<%= f.collection_select(:genre_id, @genre,:id,:genre_name) %>
			<%= f.submit  '商品登録' %>
			<% end %>
		</div>
	</div>
</div>

</body>
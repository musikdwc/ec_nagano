
<h1>商品情報編集画面</h1>
<%= form_for @product, url: admins_product_path do |f| %>
  <h3> 商品画像登録 </h3>
 	  <%= f.attachment_field :product_image %>
 		 <h4>商品情報<h4>
			 <%= f.text_field :product_name %>
			   <h4>商品情報</h4>
					 <%= f.text_field :product_description %>
   				   <h4>税抜価格</h4>
   				   	<%= f.text_field :non_tax %>
<h4>ジャンル</h4>
<h4>ステータス</h4>
 <%= f.submit "商品情報編集を反映" %>
<% end %>

<%= link_to "商品一覧へ", admins_products_path %>

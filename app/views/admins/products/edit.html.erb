
<h1>商品情報編集画面</h1>
<%= form_for @product, url: admins_product_path do |f| %>
  <h3> 商品画像登録 </h3>
 	  <%= f.attachment_field :product_image %>
 		 <h4>商品情報<h4>
			 <%= f.text_field :product_name %>
			   <h4>商品情報</h4>
				  <%= f.text_field :product_description %>
   				     <h4>税抜価格</h4>
   				   	   <p><%= f.number_field :non_tax %>円</p>
   				   			<h4> 商品ステータス　販売中/販売停止中</h4>
   				   			  <label><%= f.radio_button  :product_status, :有効 %> "有効" </label>
 			             	    <label><%= f.radio_button  :product_status, :無効 %> "無効"</label>
                           		  <h4>ジャンル</h4>
                             		<%= f.label "ジャンル" %>
		        						         <%= f.collection_select(:genre_id, @genre, :id,:genre_name) %>
 <%= f.submit "商品情報編集を反映" %>
<% end %>

<%= link_to "商品一覧へ", admins_products_path %>

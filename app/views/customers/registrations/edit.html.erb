<body>

<!-- header -->
<%= render 'headfoot/header' %>

<div class="container">
  <!-- error -->
  <% if @customer.errors.any? %>
    <div id="error_explanation">
      <h2><%= @customer.errors.count %>件のエラーが発生しました。</h2>
      <ul>
        <% @customer.errors.full_messages.each do |message| %>
          <li>error <%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row mypage-header col-xs-12">
    <div class="col-xs-6"></div>
    <h4 class="mypage-header-box">登録情報</h4>
    <div class="col-xs-9"></div>
    <%= link_to "退会する", cancel_customer_registration_path(@customer), class: "btn btn-danger col-xs-1", data: {"turbolinks" => false} %>
  </div>

  <div class="col-xs-2"></div>
  <div class="row mypage-table col-xs-8">
    <%= form_for(@customer) do |f| %>
      <table class="table-bordered customer-table">
        <tr>
          <th class="col-xs-1 customer-box">氏名</th>
            <td class="col-lg-1 customer-form">
            <%= f.text_field :lastname, autofocus: true, autocomplete: "lastname" %>
            <%= f.text_field :firstname, autofocus: true, autocomplete: "firstname" %>
            </td>
        </tr>
        <tr>
          <th class="col-xs-1 customer-box">カナ</th>
            <td class="col-lg-1 customer-form" >
            <%= f.text_field :lastkana, autofocus: true, autocomplete: "lastkana" %>
            <%= f.text_field :firstkana, autofocus: true, autocomplete: "firstkana" %>
            </td>
        </tr>
        <tr>
          <th class="col-xs-1 customer-box">郵便番号</th>
            <td class="col-lg-1 customer-form">
            <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
            </td>
        </tr>
        <tr>
          <th class="col-xs-1 customer-box">住所</th>
            <td class="col-lg-1 customer-form" >
              <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
            </td>
        </tr>
        <tr>
          <th class="col-xs-1 customer-box">電話番号</th>
            <td class="col-lg-1 customer-form" >
              <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
            </td>
        </tr>
        <tr >
          <th class="col-xs-1 customer-box">メールアドレス</th>
            <td class="col-lg-1 customer-form" >
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </td>
        </tr>
      </table>
    </div>

    <div class="row col-xs-12">
      <div class="col-xs-9"></div>
        <%= f.submit "保存する", class: "btn btn-primary col-xs-1", data: {"turbolinks" => false} %>
        <% end %>
    </div>
  </div>

<!-- footer -->
<%= render 'headfoot/footer' %>

</body>
<%= render 'headfoot/header' %>
<div class="container">
  <div class="row">
    <h2>ショッピングカート一覧</h2>
     <!-- link_to "カートを空にする", customers_carts_path(@carts), method: :delete %> -->
    <%= link_to "全て削除する", customers_all_destroy_path, method: :delete %>
    <table class="table-bordered col-xs-12">
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
         <% @cart_items.each do |item| %>
          <tr>
      <td text-align:center;><img height="80" src="<%=h item.product.image_url %>"/></td>
      <td text-align:center;><font size="4"><%= item.product.product_name %></font></td>
      <td text-align:center;><font size="4"><%= (item.product.non_tax).to_i %>円</font></td>
    </tr>
            <td><%= (cart.product.non_tax * 1.1 * cart.item_count).floor %></td>
            <td><%= link_to "削除する", customers_delete_product_path(cart), method: :delete %></td>
          </tr>
         <% end %>
      </tbody>
    </table>
    <table class="table-bordered">
      <tr>
        <th class="col-xs-2">合計金額</th>
        <td class="col-xs-2">
          <% @sum = 0 %>
          <% @cart_items.each do |cart| %>
          <% @sum += (cart.product.non_tax * cart.item_count * 1.1).floor %>
          <% end %>
          <%= @sum %>
        </td>
      </tr>
    </table>
  </div>
  <div class="row">
  <%= link_to "情報入力に進む", new_customers_order_path, class: "btn btn-primary" %>
  </div>
</div>
  <%= render 'headfoot/footer' %>
  
<%= render 'headfoot/header' %>

<h2>ショッピングカート一覧</h2>
 <!-- link_to "カートを空にする", customers_carts_path(@carts), method: :delete %> -->
<%= link_to "全て削除する", customers_all_destroy_path, method: :delete %>
<table class="table">
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
     <% @carts.each do |cart| %>
      <tr>
        <td>
          <%= attachment_image_tag @product, :product_image, :fill, 50, 50, fallback:"No-Image-Available.png",size: :"50x50" %>
          <%= cart.product.product_name %>
        </td>
        <td><%= cart.product.non_tax %>+tax計算</td>
        <td>
          <%= form_for cart, url: customers_cart_path(cart) do |f| %>
            <%= f.number_field :item_count %>
            <%= f.submit 'Create Memo' %>
          <% end %>
        </td>
        <td><%= cart.product.non_tax %>+tax *item_count</td>
        <td><%= link_to "削除する", customers_cart_path(cart), method: :delete %></td>
      </tr>
     <% end %>
  </tbody>
</table>

<%= render 'headfoot/footer' %>
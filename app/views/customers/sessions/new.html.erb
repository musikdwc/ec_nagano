<div class="container">
  <div class="row">
    <div class="col-xs-3"></div>
      <div class="col-xs-3">
        <h5 style="background-color: gray;">会員の方はこちらからログイン</h5>
      </div>
  </div>

  <div class="row">
    <div class="col-xs-4"></div>
    <div class="col-xs-8">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :"メールアドレス" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "メールアドレス" %>
      </div>
      <div class="field">
        <%= f.label :"パスワード　　" %>
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>
      <div class="col-xs-1"></div>
        <div class="col-xs-2">
          <%= f.submit "ログイン" %>
          <% end %>
        </div>
      <div class="col-xs-1"></div>
        <div class="col-xs-4">
        <%= link_to "=>パスワードを忘れた方はこちら", new_admin_password_path %>
        </div>
    </div>
  </div>

  <div class="row">
        <div class="col-xs-3"></div>
        <div class="col-xs-3">
          <h5 style="background-color: gray;">登録がお済みでない方</h5>
        </div><br>
        <div>
          <div class="col-xs-1"></div>
          <h5><%= link_to "こちら ", new_customer_registration_path %>から新規登録を行ってください</h5>
        </div>
  </div>
</div>

<%= render 'headfoot/footer' %>

